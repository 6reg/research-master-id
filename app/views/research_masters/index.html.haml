%h1.text-center
  Your Research Master Records
.bootstrap-table-dropdown-overflow
  %table{ data: { toggle: 'table', search: 'true', show_columns: 'true',
    show_refresh: 'true', show_toggle: 'true',
    url: research_masters_path(format: :json) } }
    %thead
      %tr
        %th{ data: { field: 'pi_name' } }
          PI Name
        %th{ data: { field: 'department' } }
          Department
        %th{ data: { field: 'long_title' } }
          Long Title
        %th{ data: { field: 'short_title' } }
          Short Title
        %th{ data: { field: 'funding_source' } }
          Funding Source

